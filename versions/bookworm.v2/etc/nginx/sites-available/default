proxy_headers_hash_max_size 1024;
proxy_headers_hash_bucket_size 128;

error_log /dev/stdout info;

server {
    listen 80;
    listen [::]:80 default_server;
    # server_name your_domain_or_IP;

    access_log /dev/stdout;

    # location /favicon.ico {
    #     root /var/www/static;
    #     access_log off;
    #     log_not_found off;
    # }

    location /static/ {
        root /var/www;
    }

    location ~ ^/shell(.*)$ {
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        ## couldn't get socket to work
        # proxy_pass http://unix:/run/nginx/ttyd.sock;
        proxy_pass http://127.0.0.1:7681/$1;
    }

    # Gunicorn APIs
    location ~ ^/api(.*)$ {
        include proxy_params;
        proxy_pass http://unix:/run/gunicorn/flask-awsmgr.sock;
        proxy_read_timeout 90s;
        proxy_redirect off;

        proxy_buffering off; # ADDED 20231027hf

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # NodeJS
    location / {
        include proxy_params;
        proxy_pass http://unix:/run/node/express-nextjs.socket;
        proxy_read_timeout 90s;
        proxy_redirect off;

        proxy_buffering off; # ADDED 20231027hf

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # You may need this to prevent return 404 recursion.
    location = /404.html {
        internal;
    }
}